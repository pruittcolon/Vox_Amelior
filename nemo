#!/bin/bash
# Nemo Server Launcher
# Wrapper script that delegates to scripts/start.sh for convenience
#
# Usage:
#   ./nemo           - Start full stack
#   ./nemo --help    - Show help
#   ./nemo --stop    - Stop all services
#   ./nemo --light   - Start lightweight (no Gemma/Transcription)
#   ./nemo --https   - Start with HTTPS

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

case "${1:-}" in
    --stop|stop)
        exec "$SCRIPT_DIR/scripts/start-stop.sh" "$@"
        ;;
    --light|light)
        exec "$SCRIPT_DIR/scripts/start-light.sh" "$@"
        ;;
    --https|https)
        exec "$SCRIPT_DIR/scripts/start-https.sh" "$@"
        ;;
    --frontend|frontend)
        exec "$SCRIPT_DIR/scripts/start-frontend-only.sh" "$@"
        ;;
    --no-transcription|no-transcription)
        exec "$SCRIPT_DIR/scripts/start-no-transcription.sh" "$@"
        ;;
    --help|-h|help)
        echo "Nemo Server Launcher"
        echo ""
        echo "Usage: ./nemo [OPTION]"
        echo ""
        echo "Options:"
        echo "  (no args)         Start full stack (default)"
        echo "  --stop            Stop all services"
        echo "  --light           Start lightweight (no Gemma/Transcription)"
        echo "  --https           Start with HTTPS/TLS"
        echo "  --frontend        Start frontend-only mode"
        echo "  --no-transcription Start without transcription"
        echo "  --help            Show this help"
        echo ""
        echo "Scripts are located in: $SCRIPT_DIR/scripts/"
        exit 0
        ;;
    *)
        exec "$SCRIPT_DIR/scripts/start.sh" "$@"
        ;;
esac
