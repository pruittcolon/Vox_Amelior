# Copy this file to docker/.env and fill in real values for your environment.
# Secrets should instead be provided via docker/secrets/ (see README).

# General
ENVIRONMENT=production

# API Gateway
ENABLE_DEMO_USERS=false
# SECURE_MODE=true blocks unsafe dev flags like ENABLE_DEMO_USERS.
# For local dev with demo users, set SECURE_MODE=false.
SECURE_MODE=true
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=strict
ALLOWED_ORIGINS=https://your-domain.tld

# Logging / diagnostics
DEBUG_TOKENS=false
# LOG_FINGERPRINT_KEY= # optional HMAC key for token fingerprints when DEBUG_TOKENS=true

# Redis
REDIS_URL=redis://redis:6379/0

# PostgreSQL task queue
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=nemo_queue

# GPU coordinator
GPU_PAUSE_TIMEOUT=12.0

# Transcription service
TRANSCRIBE_STRATEGY=parakeet
TRANSCRIBE_USE_VAD=true

# RAG service
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Flutter / mobile clients
WHISPER_SERVER_BASE=http://127.0.0.1:8000

# =============================================================================
# Salesforce CRM Integration
# =============================================================================
# Required for Salesforce features - get these from your Connected App settings
SALESFORCE_CLIENT_ID=your_connected_app_client_id
SALESFORCE_CLIENT_SECRET=your_connected_app_client_secret
SALESFORCE_DOMAIN=your-org.my.salesforce.com

# Optional Salesforce settings
SALESFORCE_API_VERSION=v59.0
SALESFORCE_ENABLED=true
SALESFORCE_MAX_RETRIES=3
SALESFORCE_RETRY_DELAY=1.0

